<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_devices">

    <fragment
        android:id="@+id/nav_devices"
        android:name="com.embeltech.meterreading.ui.device.DeviceDetailsFragment"
        android:label="@string/dashboard"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_report"
        android:name="com.embeltech.meterreading.ui.report.ReportFragment"
        android:label="@string/menu_report"
        tools:layout="@layout/fragment_report" />

    <fragment
        android:id="@+id/nav_add_user"
        android:name="com.embeltech.meterreading.ui.adduser.UserListFragment"
        android:label="@string/addUser"
        tools:layout="@layout/fragment_user_list" />

    <fragment
        android:id="@+id/nav_billing"
        android:name="com.embeltech.meterreading.ui.billing.BillingFragment"
        android:label="@string/billing"
        tools:layout="@layout/fragment_billing" />

    <fragment
        android:id="@+id/nav_issue"
        android:name="com.embeltech.meterreading.issues.IssuesFragment"
        android:label="@string/issue"
        tools:layout="@layout/fragment_issues" />


    <fragment
        android:id="@+id/nav_statistics"
        android:name="com.embeltech.meterreading.ui.statistics.GraphFragment"
        android:label="@string/contactUs"
        tools:layout="@layout/graph_fragment" />

    <activity
        android:id="@+id/nav_logout"
        android:name="com.embeltech.meterreading.ui.report.StatActivity"
        android:label="Logout"
        tools:layout="@layout/activity_stat" />

    <fragment
        android:id="@+id/nav_device"
        android:name="com.embeltech.meterreading.ui.device.DeviceListFragment"
        android:label="@string/deviceList"
        tools:layout="@layout/fragment_device_list" />

</navigation>